<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_black"
    android:orientation="vertical"
    tools:context="com.rain.zhihui_community.ui.activity.government.CertificateWinActivity">

    <include
        android:id="@+id/title"
        layout="@layout/title_item_layout"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="最近服务点"
        android:textColor="@color/title_black"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/lv_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_text"
        android:layout_below="@id/title"
        android:background="@color/view_black"
        android:divider="@color/white"
        android:listSelector="#00000000"
        android:scrollbars="none">
    </ListView>

</RelativeLayout>
