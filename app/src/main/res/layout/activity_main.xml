<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rain.zhihui_community.ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"></FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/yzs_base_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        app:tl_indicator_color="@color/white"
        app:tl_indicator_gravity="TOP"
        app:tl_textSelectColor="@color/title_black"
        app:tl_textUnselectColor="#66000000">

    </com.flyco.tablayout.CommonTabLayout>

</FrameLayout>
