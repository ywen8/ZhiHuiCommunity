<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp05"
        android:background="@drawable/linearlayout_dialog_radius"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_updata"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="你需要更新应用才能继续使用"
            android:textColor="@color/text_color_gary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_new_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="最新版本:1.3.0.1"
            android:textColor="@color/text_color_gary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前版本:1.3.0.0"
            android:textColor="@color/text_color_gary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="更新内容"
            android:textColor="@color/text_color_gary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容更新内容"
            android:textColor="@color/text_color_gary"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp70"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/title_black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
