<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_item_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.rain.zhihui_community.ui.view.banner.BannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp210"
            app:bvAspectRatio="0.533333"
            app:bvBarPaddingBottom="@dimen/dp05"
            app:bvBarPaddingLeft="@dimen/dp15"
            app:bvBarPaddingTop="@dimen/dp05"
            app:bvIndicatorColorSelected="@color/white"
            app:bvIndicatorGap="@dimen/dp08"
            app:bvIndicatorGravity="center"
            app:bvIndicatorVisible="1"
            app:bvIsLoop="true"
            app:bvTitleSize="@dimen/sp16">

        </com.rain.zhihui_community.ui.view.banner.BannerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_open_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_appointment_bg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp70"
            android:layout_marginRight="@dimen/dp70"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/textview_register_select"
            android:text="业主预约"
            android:textColor="@color/title_black"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

</LinearLayout>
