<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_black"
    android:orientation="vertical"
    tools:context="com.rain.zhihui_community.ui.activity.ReportPoliceActivity">

    <include layout="@layout/title_item_layout" />

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp320"></com.amap.api.maps.MapView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp15"
        android:paddingTop="@dimen/dp10"
        android:text="我的位置:"
        android:textColor="@color/login_select_no"
        android:textSize="@dimen/sp16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@drawable/icon_address_pos" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:singleLine="true"
            android:text="陕西省西安市东新世纪广场"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_police"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp50"
        android:background="@drawable/button_report_select_press"
        android:gravity="center"
        android:padding="@dimen/dp08"
        android:text="一键报警"
        android:textColor="@color/white"
        android:textSize="@dimen/sp17" />
</LinearLayout>
