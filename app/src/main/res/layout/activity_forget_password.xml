<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/dp_15"
              android:background="@color/view_black"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="com.rain.zhihui_community.ui.activity.forget.ForgetPasswordActivity">

    <include
        layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:background="@color/view_black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/view_black"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/person"/>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/mobile_code"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/login_select_no"
                android:textColorHint="@color/text_color_gary"
                android:textSize="@dimen/sp16"/>

            <TextView
                android:id="@+id/tv_gain_code"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp35"
                android:background="@drawable/button_login_select_no"
                android:gravity="center"
                android:text="@string/register_gain_code"
                android:textColor="@color/login_select_no"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/login_select_no"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/code"/>

            <EditText
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/register_code"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/login_select_no"
                android:textColorHint="@color/text_color_gary"
                android:textSize="@dimen/sp16"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/login_select_no"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwd"/>

            <EditText
                android:id="@+id/et_passward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/mobile_pwd"
                android:inputType="textPassword"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/login_select_no"
                android:textColorHint="@color/text_color_gary"
                android:textSize="@dimen/sp16"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/login_select_no"></View>
    </LinearLayout>

    <Button
        android:id="@+id/btn_complete"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp60"
        android:layout_marginRight="@dimen/dp60"
        android:layout_marginTop="@dimen/dp60"
        android:background="@drawable/button_login_select_no"
        android:gravity="center"
        android:text="@string/btn_comple"
        android:textColor="@color/login_select_no"
        android:textSize="@dimen/sp16"/>
</LinearLayout>
